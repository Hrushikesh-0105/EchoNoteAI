{
  "manifest_version": 3,
  "name": "Echo Note Extension",
  "version": "1.0",
  "permissions": ["tabs", "downloads", "storage", "cookies"],
  "host_permissions": ["http://localhost:5173/"],
  "action": {
    "default_popup": "frontend/popup.html",
    "default_icon": "assets/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["record.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
